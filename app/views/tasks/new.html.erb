<h1>New Task</h1>

<%= form_for(@task) do |f| %>
  <p>
    <%= f.label(:title)%>
    <%= f.text_field(:title)%>
  </p>
  <p>
    <%= f.label(:details)%>
    <%= f.text_area(:details)%>
  </p>

  <%= f.submit("CREATE")%>
<%end%>

<%=link_to("Tasks List", tasks_path)%>

