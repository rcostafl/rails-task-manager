<h1>Edit Task</h1>

<%= form_for(@task) do |f| %>
  <p>
    <%= f.label(:title)%>
    <%= f.text_field(:title)%>
  </p>
  <p>
    <%= f.label(:details)%>
    <%= f.text_area(:details)%>
  </p>
  <p>
    <%= f.label(:completed)%>
    <%= f.check_box(:completed)%>
  </p>

  <%= f.submit("UPDATE  ")%>
<%end%>

<%=link_to("Tasks List", tasks_path)%>

